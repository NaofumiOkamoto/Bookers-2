<h1>user編集ページ</h1>

<div class="">
  <div class="">

    <%= form_for(@user) do |f| %>

      <div class="field">
        <label class="">Name</label>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.attachment_field :profile_image %>
      </div>

      <div class="field">
        <label class="">introduction</label>
        <%= f.text_field :introduction %>
      </div>

      <div class="field">
        <%= f.submit "Update User", class:"action" %>
      </div>

    <% end %>
  </div>
</div>
