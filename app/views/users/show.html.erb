<div class="body">
  <div class="container">
    <div class="row">

      <div class="col-xs-3">
        <div class="user_info">
          <div class="user_info_titel">
            <h1>User info</h1>
          </div>
          <div class="user_info_image">
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: 'no_image.jpg' %>
            <!---ここに画像入れる -->
          </div>
          <div class="user_info_show">
            <table class="table">
              <tr>
                <td>name</td>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <td>introduction</td>
                <td><%= @user.introduction %></td>
              </tr>
            </table>
            <div class="row">
            <%= link_to edit_user_path do %>
              <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_5578"></span>
            <% end %>
            </div>
          </div>
        </div>



        <div class="new_book">
          <h2>New book</h2>
        </div>
      </div>



<!-- -----------ここから右側 -------------- -->

      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <tr>
            <td>画像</td>
            <td>投稿した本のタイトル</td>
            <td>本の感想</td>
          </tr>
        </table>
      </div>

    </div><!--row-->
  </div><!--container-->
</div>
