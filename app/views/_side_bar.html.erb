       <div class="user_info">
          <div class="user_info_titel">
            <h2>User info</h2>
          </div>
          <div class="user_info_image">
            <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: 'no_image.jpg' %>
          </div>

          <div class="user_info_show">

            <table class="table">
              <tr>
                <td>name</td>
                <td><%= user.name %></td>
              </tr>
              <tr>
                <td>introduction</td>
                <td><%= user.introduction %></td>
              </tr>
            </table>

            <div class="row">
            <%= link_to edit_user_path(current_user.id) do %>
              <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_5578"></span>
            <% end %>

            </div>
          </div>
        </div>


 
