<div class="body">
  <div class="container">
    <div class="row">

      <div class="col-xs-3">

        <%= render '/side_bar', book: @book, user: @user %>
      </div>
<!-- -----------ここから右側 -------------- -->

      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <thead>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          </tr>
          </thead>
              <tr>
                <td>
                  <%= link_to user_path(@books.user.id) do %>
                    <%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: 'no_image.jpg' %><br><%= @books.user.name %><% end %></td>
                <td><%= link_to @books.title, book_path(params[:id]) %></td>
                <td><%= @books.body %></td>
                <% if @user.id == current_user.id %>
                  <td><%= link_to 'Edit', edit_book_path(@books.id), class:"btn-sm btn-success edit_book_9335" %></td>
                  <td><%= link_to 'Destroy', book_path(@books.id), method: :delete, class:"btn-sm btn-danger destroy_book_9335" %></td>
                <% end %>
              </tr>
        </table>
      </div>

    </div><!--row-->
  </div><!--container-->
</div>
